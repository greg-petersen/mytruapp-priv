<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.brianmissedthebus.mytru.LogInActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:weightSum="3" >

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/backButton3"
                android:src="@drawable/arrow_blue"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="my"
                android:id="@+id/textView5"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#6b9b83"
                android:textAlignment="gravity"
                android:gravity="right"
                android:singleLine="true"
                android:layout_weight="1.25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRU"
                android:id="@+id/textView6"
                android:textColor="#052b6a"
                android:textStyle="bold"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="#052b6a"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Number"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="#032969"
            android:fontFamily="times new roman" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/studentNumberIn"
            android:layout_gravity="center_horizontal"
            android:fontFamily="times new roman"
            android:maxLines="1"
            android:maxLength="9"
            android:hint="T00000000"
            android:textAlignment="gravity"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="#032969"
            android:fontFamily="times new roman" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordIn"
            android:layout_gravity="center_horizontal"
            android:maxLines="1"
            android:hint="password"
            android:singleLine="false"
            android:fontFamily="times new roman"
            android:textAlignment="gravity"
            android:gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:id="@+id/saveButton"
            android:layout_gravity="center_horizontal"
            android:textColor="#032969"
            android:textSize="15sp"
            android:fontFamily="times new roman"
            android:textStyle="bold"
            android:background="#7ca88f" />

    </LinearLayout>
</RelativeLayout>
